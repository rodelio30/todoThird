
<p id="notice"><%= notice %></p>

<h1>Lists</h1>
<table class="table table-striped">
  <thead class="thead-white">
    <tr>
      <th colspan="2">Title</th>
      <th></th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= link_to todo_list.title, todo_list, class:'text-dark' %></td>
        <td></td>
        <td></td>
        <td>
        <%= link_to 'Edit', edit_todo_list_path(todo_list), class:'text-dark' %>
        <%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-dark' %></td>
      </tr>
    <% end %>


  </tbody>
</table>


<br>

<%= link_to 'New Todo List', new_todo_list_path, class:'btn btn-outline-info', style: 'float:right'%>
